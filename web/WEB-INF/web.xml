<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>WebSecPack.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>WebSecPack.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MakeAPost</servlet-name>
        <servlet-class>WebSecPack.MakeAPost</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MakeAPost</servlet-name>
        <url-pattern>/MakeAPost</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Comments</servlet-name>
        <servlet-class>WebSecPack.Comments</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Comments</servlet-name>
        <url-pattern>/Comments</url-pattern>
    </servlet-mapping>


</web-app>